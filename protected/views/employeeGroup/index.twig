{% extends "views/layouts/content.twig" %}

{% block leftmenu %}
    {% include "views/employeeGroup/left.twig" %}
{% endblock %}

{% block content %}
    <ul class="nav nav-tabs nav-tabs-employee">
        <li role="presentation" class="active"><a href="#">Отделы</a></li>
    </ul>
    <div class="form-tabs">

        <div class="form-tabs-title">Добавить отдел</div>

        <form id="employee-form" class="form-horizontal" method="post" action="{{ "/employeeGroup/create" }}">
            <div class="form-group">
                <label for="EmployeeGroup_name" class="col-sm-2 control-label">Название отдела</label>
                <div class="col-sm-10">
                    <input name="EmployeeGroup[name]" class="form-control" id="EmployeeGroup_name" type="text" maxlength="32" value="" />
                </div>
            </div>
            <div class="form-group">
                <label for="EmployeeGroup_manage" class="col-sm-2 control-label">Управление заявками</label>
                <div class="col-sm-10">
                    <div class="checkbox">
                        <input name="EmployeeGroup[manage]" id="EmployeeGroup_manage" type="checkbox" value="1" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Типы заявок</label>
                <div class="col-sm-10">
                    <label class="checkbox-inline">
                        <input name="EmployeeGroupType[service]" type="checkbox" value="1" /> Сервис
                    </label>
                    <label class="checkbox-inline">
                        <input name="EmployeeGroupType[wash]" type="checkbox" value="1" /> Мойки
                    </label>
                    <label class="checkbox-inline">
                        <input name="EmployeeGroupType[tires]" type="checkbox" value="1" /> Шиномонтаж
                    </label>
                    <label class="checkbox-inline">
                        <input name="EmployeeGroupType[company]" type="checkbox" value="1" /> Компании
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Архив</label>
                <div class="col-sm-10">
                    <label class="checkbox-inline">
                        <input name="EmployeeGroupArchive[service]" type="checkbox" value="1" /> Сервис
                    </label>
                    <label class="checkbox-inline">
                        <input name="EmployeeGroupArchive[wash]" type="checkbox" value="1" /> Мойки
                    </label>
                    <label class="checkbox-inline">
                        <input name="EmployeeGroupArchive[tires]" type="checkbox" value="1" /> Шиномонтаж
                    </label>
                    <label class="checkbox-inline">
                        <input name="EmployeeGroupArchive[company]" type="checkbox" value="1" /> Компании
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    <input type="submit" class="btn btn-primary" name="yt0" value="Сохранить" />
                </div>
            </div>
        </form>

        {{ grid|raw }}
    </div>
{% endblock %}
