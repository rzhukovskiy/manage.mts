{% extends "views/request/tabs.twig" %}

{% block form %}
    <form method="post" action="{{ this.createUrl('requestDetails/updateCompanyDrivers?id=' ~ Request.id) }}">
        <div class="items">
            <div class="form-group">
                <h3>Водители:</h3>
            </div>

            <div class="advancedDetailBlock">
                {% for Driver in Request.RequestCompany.RequestCompanyDriver %}
                    {% include "views/requestDetails/companyDriver.twig" %}
                {% endfor %}
            </div>

            <div class="row">
                <div class="col-md-12">
                    <button type="button" class="btn btn-primary btn-addCompanyDriver" title="Добавить водителя">+</button>
                    <span class="browse-button">
                        <input class="btn btn-primary" type="button" value="Загрузить из excel файла" />
                        <input type="file" data-id="{{ Request.id }}" id="btn-addCompanyDriver-FromFile" />
                    </span>
                </div>
            </div>
        </div>
    <div class="row" style="padding-top: 30px;">
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </div>
    </div>
</form>
{% endblock %}