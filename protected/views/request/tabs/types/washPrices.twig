{% extends "views/request/tabs.twig" %}

{% block form %}
    <form method="post" action="{{ this.createUrl('requestDetails/updateWashPrices?id=' ~ Request.id) }}">
        <div class="items">
            <div class="form-group">
                <h3>Цены:</h3>
            </div>

            <div class="advancedDetailBlock">
                {% for Auto in Request.RequestWash.RequestWashService %}
                    {% include "views/requestDetails/washService.twig" %}
                {% endfor %}
            </div>

            <div class="row">
                <div class="col-md-12">
                    <button type="button" class="btn btn-primary btn-addWashService" title="Добавить цену">+</button>
                </div>
            </div>
        </div>
        <div class="row" style="padding-top: 30px;">
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary">Сохранить</button>
            </div>
        </div>
    </form>
{% endblock %}