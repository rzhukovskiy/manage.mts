    <div class="col-md-3">
        <div class="form-group">
            <label>Вид ТС</label>

            <div class="">
                <div class="input-group">
                    <input class="form-control" type="text" name="RequestWashService[type][]"
                           value="{% if Auto is defined %}{{ Auto.type }}{% endif %}"/>
                    <span class="input-group-btn">
                        <button
                                class="btn btn-default form-control btn-ts-modal btn-edit" data-toggle="modal"
                                data-target="#ts_modal"><span class="glyphicon glyphicon-pencil"></span>
