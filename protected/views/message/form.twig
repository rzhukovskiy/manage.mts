<div class="form-tabs">
    <form id="message-form" class="form-horizontal" method="post" action="/message/create">
        <div class="form-group">
            <label for="Message_to" class="col-sm-2 control-label">Кому</label>
            <div class="col-sm-10">
                <select name="Message[to]" class="form-control" id="Message_to">
                    {% for CurrentEmployee in Employees %}
                        <option value="{{ CurrentEmployee.id }}">{{ CurrentEmployee.username }}
                        </option>
                    {% endfor %}
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="Message_text" class="col-sm-2 control-label">Текст</label>
            <div class="col-sm-10">
                <textarea class="form-control input-large" style="height: 100px" name="Message[text]" id="Message_text"></textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <input type="submit" class="btn btn-primary" name="yt0" value="Отправить" />
            </div>
        </div>
    </form>
</div>