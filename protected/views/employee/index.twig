{% extends "views/layouts/content.twig" %}

{% block leftmenu %}
    {% include "views/employeeGroup/left.twig" %}
{% endblock %}

{% block content %}
    <ul class="nav nav-tabs nav-tabs-employee">
        {% for index, CurrentEmployeeGroup in EmployeeGroups %}
            <li role="presentation" {% if CurrentEmployeeGroup.id == currentId %}class="active"{% endif %} data-id="{{ CurrentEmployeeGroup.id }}"><a href="/employee?id={{ CurrentEmployeeGroup.id }}">{{ CurrentEmployeeGroup.name }}</a></li>
        {% endfor %}
    </ul>
    <div class="form-tabs">
        <div class="form-tabs-title">Добавить сотрудника</div>

        <form id="employee-form" class="form-horizontal" method="post" action="{{ "/employee/create" }}">
            <div class="form-group">
                <label for="Employee_username" class="required col-sm-2 control-label">Имя пользователя</label>
                <div class="col-sm-10">
                    <input name="Employee[username]" id="Employee_username" class="form-control" type="text" maxlength="32" value="" />
                </div>
            </div>
            <div class="form-group">
                <label for="Employee_password" class="required col-sm-2 control-label">Пароль</label>
                <div class="col-sm-10">
                    <input size="60" maxlength="64" name="Employee[password]" class="form-control" id="Employee_password" type="password" value="" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    <input type="hidden" name="Employee[employee_group_id]" id="Employee_employee_group_id" value="{{ currentId }}" />
                    <input type="submit" class="btn btn-primary" name="yt0" value="Сохранить" />
                </div>
            </div>
        </form>

        <div id="employee-grid">
            {{ grid|raw }}
        </div>
    </div>
{% endblock %}